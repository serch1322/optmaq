<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mantenimiento_preventivo" model="ir.ui.view">
        <field name="name">mantenimiento.preventivo</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="mantenimiento_correctivo" type="object" string="Crear MTO Correctivo" class="btn btn-primary"/>
            </xpath>
            <xpath expr="//page[@name='maintenance']" position="after">
                <page string="Mantenimiento Preventivo">
                    <field name="tipo_mantenimiento">
                        <tree string="Mantenimiento Preventivo">
                            <field name="name"/>
                            <field name="tiempo"/>
                            <field name="refacciones" invisible="1">
                                <tree string="Refacciones" editable="bottom">
                                    <field name="name"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>


    <record id="refacciones_en_mantenimiento" model="ir.ui.view">
        <field name="name">refacciones.en.mantenimiento</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <notebook>
                    <page string="Refacciones en Mantenimiento">
                        <field name="refacciones">
                            <tree string="Refacciones en Mantenimiento" editable="bottom">
                                <field name="name"/>
                                <field name="qty"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>