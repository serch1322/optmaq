<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mantenimiento_qr" model="ir.ui.view">
        <field name="name">mantenimiento.qr</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header>
                    <button name="generar_qr" type="object" string="Generar QR" class="btn btn-primary"/>
                </header>
            </xpath>
            <field name="owner_user_id" position="after">
                <field name="codigo_qr" widget="image" class="oe_avatar"/>
            </field>
        </field>
    </record>
</odoo>